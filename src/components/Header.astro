---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<header class="header">
  <div class="header-background"></div>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between">
      <Link href="/" underline={false}>
        <div class="site-name">
          {SITE.NAME}
        </div>
      </Link>
      <nav class="flex gap-4">
        <Link href="/blog" class="blur-hover">
          blog
        </Link>
        <Link href="/work" class="underline-animation">
          work
        </Link>
        <Link href="/projects" class="magnetic-hover">
          projects
        </Link>
      </nav>
    </div>
  </Container>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('.header');
    
    if (header) {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) { // You can adjust this value
          header.classList.add('compact');
        } else {
          header.classList.remove('compact');
        }
      });
    }
  });
</script>