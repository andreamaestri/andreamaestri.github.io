---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
import HeaderScrollAnimation from "@components/HeaderScrollAnimation";
import { ViewTransitions } from 'astro:transitions';

// Navigation links data
const navLinks = [
  { href: "/blog", label: "Blog" },
  { href: "/work", label: "Work" },
  { href: "/projects", label: "Projects" }
];
---

<header id="main-header" class="fixed top-0 left-0 w-screen z-50 flex justify-center px-2 sm:px-6 py-2 sm:py-3">
  <ViewTransitions fallback="swap" />
  <HeaderScrollAnimation client:load SITE_NAME={SITE.NAME} navLinks={navLinks} />
</header>

<!-- Add space to prevent content from hiding under the fixed header -->
<div class="h-16 sm:h-20 w-full"></div>